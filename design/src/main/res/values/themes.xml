<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.DayNight" parent="AppTheme" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="colorError">@color/error</item>
        <item name="actionMenuTextColor">@color/link</item>

        <!-- Text Styles -->
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="textAppearanceBody1">@style/App.TextAppearance.MaterialComponents.Body1.DayNight</item>
        <item name="textAppearanceBody2">@style/App.TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceSubtitle1">
            @style/App.TextAppearance.MaterialComponents.Subtitle1.Secondary
        </item>
        <item name="textAppearanceSubtitle2">
            @style/App.TextAppearance.MaterialComponents.Body2.Secondary
        </item>
        <item name="textAppearanceHeadline3">
            @style/App.TextAppearance.MaterialComponents.Headline3.Montserrat
        </item>
        <item name="textAppearanceHeadline4">
            @style/App.TextAppearance.MaterialComponents.Headline4.Montserrat
        </item>
        <item name="textAppearanceHeadline5">
            @style/App.TextAppearance.MaterialComponents.Headline5.Montserrat.DayNight
        </item>
        <item name="textAppearanceHeadline6">
            @style/App.TextAppearance.MaterialComponents.Headline6.Montserrat.DayNight
        </item>

        <!-- Component Styles -->
        <item name="navigationViewStyle">@style/Widget.App.NavigationView.DayNight</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.DayNight</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Surface.DayNight</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="materialCardViewStyle">@style/App.MaterialCardView.DayNight</item>
        <item name="tabStyle">@style/App.Widget.Design.TabLayout.DayNight</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorSurface">@color/primary_blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="textAppearanceBody1">
            @style/App.TextAppearance.MaterialComponents.Body1.Montserrat.Secondary
        </item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:listDivider">@drawable/menu_divider</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Inverted" parent="">
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Splash" parent="">
        <item name="android:textColorPrimary">@color/grey_1</item>
    </style>

    <style name="ThemeOverlay.App.Menu" parent="">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ThemeOverlay.Link" parent="">
        <item name="colorPrimary">@color/link</item>
    </style>

    <style name="CardView.DayNight" parent="CardView" />

    <style name="App.Dialog.DayNight" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/App.Dialog.Button.DayNight</item>
        <item name="buttonBarPositiveButtonStyle">@style/App.Dialog.Button.DayNight</item>
    </style>

    <style name="App.Dialog.Button.DayNight" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/link</item>
    </style>
</resources>
