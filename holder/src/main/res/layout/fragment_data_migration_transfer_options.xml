<?xml version="1.0" encoding="utf-8"?>
<nl.rijksoverheid.ctr.design.widgets.AnimatorScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginHorizontal="@dimen/horizontal_padding"
        android:layout_marginVertical="24dp">

        <nl.rijksoverheid.ctr.design.widgets.AccessibilityHeaderWidget
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/holder_startMigration_title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <nl.rijksoverheid.ctr.design.widgets.HtmlTextViewWidget
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAppearance="?attr/textAppearanceBody1"
            app:htmlText="@string/holder_startMigration_message"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <include
            android:id="@+id/transfer_out_button"
            layout="@layout/include_transfer_options_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@id/description"
            app:layout_constraintEnd_toEndOf="@id/description"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <include
            android:id="@+id/transfer_in_button"
            layout="@layout/include_transfer_options_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/transfer_out_button"
            app:layout_constraintEnd_toEndOf="@id/transfer_out_button"
            app:layout_constraintTop_toBottomOf="@id/transfer_out_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</nl.rijksoverheid.ctr.design.widgets.AnimatorScrollView>
