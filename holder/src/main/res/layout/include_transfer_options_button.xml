<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commercial_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:importantForAccessibility="yes"
    app:cardCornerRadius="@dimen/test_button_corner_radius"
    app:cardElevation="0dp"
    style="@style/App.MaterialCardView.ChooseProofType.DayNight"
    tools:showIn="@layout/fragment_data_migration_start_transferring">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/transfer_options_button_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/holder_startMigration_option_toOtherDevice_title"
            android:src="@drawable/illustration_data_migration_transfer_out"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/transfer_options_button_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textAppearance="?attr/textAppearanceHeadline3"
            app:layout_constraintStart_toEndOf="@id/transfer_options_button_icon"
            app:layout_constraintTop_toTopOf="@id/transfer_options_button_icon"
            app:layout_constraintBottom_toBottomOf="@id/transfer_options_button_icon"
            android:layout_marginHorizontal="16dp"
            tools:text="@string/holder_startMigration_option_toOtherDevice_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
