<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_paper_proof_healthcare"/>

    <nl.rijksoverheid.ctr.design.views.AccessibilityHeaderWidget
        android:id="@+id/titleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:focusable="false"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/iconView"
        app:layout_constraintStart_toEndOf="@id/iconView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/add_paper_proof_explanation_healthcare_item_title" />

    <TextView
        android:id="@+id/subtitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:focusable="false"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/secondary_text"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        app:layout_constraintStart_toEndOf="@id/iconView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/add_paper_proof_explanation_healthcare_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>