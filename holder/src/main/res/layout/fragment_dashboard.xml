<nl.rijksoverheid.ctr.design.widgets.AnimatorCoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?colorSurface"
    android:layoutAnimation="@anim/layout_fade_in"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tabsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- setting a standard height (which is the default height set in TabLayout.java
        of material library  in order not to break on font resize for accessibility -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_marginHorizontal="16dp"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="@color/secondary_text"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <View
            android:id="@+id/tabs_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/grey_4" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_anchor="@id/tabsContent"
        style="@style/CardView.DayNight"
        app:cardElevation="0dp"
        app:layout_anchorGravity="end|bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addQrButton"
            style="@style/Widget.App.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/horizontal_padding"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:text="@string/my_overview_add_qr_button" />

    </androidx.cardview.widget.CardView>

</nl.rijksoverheid.ctr.design.widgets.AnimatorCoordinatorLayout>
