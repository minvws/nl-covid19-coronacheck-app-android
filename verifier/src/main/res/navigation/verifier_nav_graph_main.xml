<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@+id/nav_scan_qr">

    <argument
        android:name="returnUri"
        android:defaultValue="@null"
        app:argType="string"
        app:nullable="true" />

    <fragment
        android:id="@+id/nav_scan_qr"
        android:name="nl.rijksoverheid.ctr.verifier.scanqr.ScanQrFragment"
        android:label="@string/scan_qr_title"
        tools:layout="@layout/fragment_scan_qr">

        <argument
            android:name="returnUri"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_scan_instructions"
            app:destination="@id/nav_scan_instructions"
            app:enterAnim="@animator/fragment_open_enter"
            app:exitAnim="@animator/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_policy_selection"
            app:destination="@id/nav_policy_selection"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <action
            android:id="@+id/action_menu"
            app:destination="@id/nav_menu"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <action
            android:id="@+id/action_new_policy_rules"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right"
            app:destination="@id/nav_new_policy_rules" />

    </fragment>

    <fragment android:id="@+id/nav_helpdesk"
        android:name="nl.rijksoverheid.ctr.design.menu.about.HelpdeskFragment"
        android:label="@string/verifier_helpdesk_title">

        <argument android:name="data"
            app:argType="nl.rijksoverheid.ctr.design.menu.about.HelpdeskData" />

    </fragment>

    <fragment
        android:id="@+id/nav_policy_selection"
        android:name="nl.rijksoverheid.ctr.verifier.policy.VerificationPolicySelectionFragment"
        android:label="{toolbarTitle}"
        tools:layout="@layout/fragment_verification_policy_selection">

        <argument
            android:name="toolbarTitle"
            app:argType="string" />

        <argument
            android:name="returnUri"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_scan_instructions"
            app:destination="@id/nav_scan_instructions"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <argument
            android:name="selectionType"
            app:nullable="false"
            app:argType="nl.rijksoverheid.ctr.verifier.policy.VerificationPolicySelectionType"/>

    </fragment>

    <fragment
        android:id="@+id/nav_policy_settings"
        android:name="nl.rijksoverheid.ctr.verifier.policy.VerificationPolicyInfoFragment"
        android:label="@string/verifier_menu_risksetting"
        tools:layout="@layout/fragment_verification_policy_info">

        <action
            android:id="@+id/action_policy_selection"
            app:destination="@id/nav_policy_selection"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

    </fragment>

    <action
        android:id="@+id/action_about_this_app"
        app:destination="@id/nav_about_this_app" />

    <fragment
        android:id="@+id/nav_about_this_app"
        android:name="nl.rijksoverheid.ctr.design.menu.about.AboutThisAppFragment"
        android:label="@string/about_this_app"
        tools:layout="@layout/fragment_about_app">

        <argument
            android:name="data"
            app:argType="nl.rijksoverheid.ctr.design.menu.about.AboutThisAppData" />

        <action
            android:id="@+id/action_scan_log"
            app:destination="@id/nav_scan_log"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_scan_log"
        android:name="nl.rijksoverheid.ctr.verifier.scanlog.ScanLogFragment"
        android:label="@string/verifier_about_this_app_scan_log"
        tools:layout="@layout/fragment_scan_log"/>

    <include app:graph="@navigation/verifier_nav_graph_scanner" />

    <fragment
        android:id="@+id/nav_scan_instructions"
        android:name="nl.rijksoverheid.ctr.verifier.instructions.ScanInstructionsFragment"
        android:label="@string/scan_instructions"
        tools:layout="@layout/fragment_scan_instructions">

        <argument
            android:name="returnUri"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_policy_selection"
            app:destination="@+id/nav_policy_selection"
            app:enterAnim="@animator/fragment_open_enter"
            app:exitAnim="@animator/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_new_policy_rules"
            app:destination="@id/nav_new_policy_rules"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_menu"
        android:name="nl.rijksoverheid.ctr.design.fragments.menu.MenuFragment"
        android:label="@string/general_menu">

        <argument
            android:name="menuSections"
            app:argType="nl.rijksoverheid.ctr.design.fragments.menu.MenuSection[]" />

        <action
            android:id="@+id/action_scan_qr"
            app:destination="@id/nav_scan_qr"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <action
            android:id="@+id/action_scan_instructions"
            app:destination="@id/nav_scan_instructions"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <action
            android:id="@+id/action_policy_settings"
            app:destination="@id/nav_policy_settings"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <action
            android:id="@+id/action_about_this_app"
            app:destination="@id/nav_about_this_app"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

        <action
            android:id="@+id/action_helpdesk"
            app:destination="@id/nav_helpdesk"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/nav_new_policy_rules"
        android:name="nl.rijksoverheid.ctr.verifier.policy.NewPolicyRulesFragment"
        android:label="">

        <argument
            android:name="returnUri"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_policy_selection"
            app:destination="@id/nav_policy_selection"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />
    </fragment>

</navigation>
